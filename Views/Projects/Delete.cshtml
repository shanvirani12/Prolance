@model Prolance.Application.DTOs.ProjectDto
@{
    ViewData["Title"] = "Delete Project";
}

<h2 class="mb-4">Delete Project</h2>

<div class="card shadow-lg">
    <div class="card-body">
        <h4>Are you sure you want to delete this project?</h4>
        <div class="mt-4">
            <dl class="row">
                <dt class="col-sm-3">Project Name</dt>
                <dd class="col-sm-9">@Model.ProjectName</dd>

                <dt class="col-sm-3">Client Name</dt>
                <dd class="col-sm-9">@Model.ProjectClientName</dd>

                <dt class="col-sm-3">Project Type</dt>
                <dd class="col-sm-9">@Model.ProjectType</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>

                <dt class="col-sm-3">Award Date</dt>
                <dd class="col-sm-9">@Model.AwardDate.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Closing Date</dt>
                <dd class="col-sm-9">@Model.ClosingDate?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Gross Budget</dt>
                <dd class="col-sm-9">@Model.GrossBudget</dd>

                <dt class="col-sm-3">Assigned To</dt>
                <dd class="col-sm-9">@Model.AssignedTo</dd>
            </dl>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="ProjectId" />
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
