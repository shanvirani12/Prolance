@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="text-center">
        <h1 class="mb-4">@ViewData["Title"]</h1>
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="d-inline-block" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-danger px-4 py-2 shadow-sm">Click here to Logout</button>
            </form>
        }
        else
        {
            <div class="alert alert-success mt-4" role="alert">
                <p>You have successfully logged out of the application.</p>
            </div>
        }
    </div>
</header>
