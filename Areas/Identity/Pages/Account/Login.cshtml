@page
@model LoginModel

@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Log in";
}

<div class="login-container">
    <div class="logo-container text-center mb-4">
        <img src="~/assets/images/GreyLogo.png" class="logo-image" alt="Company Logo" />
    </div>
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <section>
        <form id="account" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control bg-dark text-light" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control bg-dark text-light" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label asp-for="Input.RememberMe" class="form-check-label">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-light">Log in</button>
                <button asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="w-100 mt-3 btn btn-lg btn-light">Register</button>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .login-container {
        width: 500px;
        margin: auto;
        padding: 20px;
    }

    .logo-container {
        margin-bottom: 20px;
    }

    .logo-image {
        max-width: 200px;
        height: auto;
    }

    .form-floating {
        margin-bottom: 15px;
    }

    .btn-light {
        background-color: #f8f9fa;
        color: #343a40;
    }

        .btn-light:hover {
            background-color: #e2e6ea;
            color: #343a40;
        }
</style>
